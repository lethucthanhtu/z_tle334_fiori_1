<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="employeeDialog"
        title="{formModel>/dialogTitle}"
    >
        <VBox
            id="_IDGenVBox3"
            class="sapUiSmallMargin"
        >
            <Input
                id="_IDGenInput"
                value="{formModel>/employee/emp_ID}"
                placeholder="Employee ID"
                required="true"
                editable="{formModel>/isCreate}"
            />
            <Input
                id="_IDGenInput1"
                value="{formModel>/employee/first_name}"
                placeholder="First Name"
                required="true"

            />
            <Input
                id="_IDGenInput2"
                value="{formModel>/employee/last_name}"
                placeholder="Last Name"
                required="true"
            />
            <Input
                id="_IDGenInput3"
                value="{formModel>/employee/email}"
                placeholder="Email"
                required="true"
            />
            <Input
                id="_IDGenInput4"
                value="{formModel>/employee/phone_no}"
                placeholder="Phone No"
                required="true"
            />
            <Input
                id="_IDGenInput5"
                value="{formModel>/employee/manager}"
                placeholder="Manager"
            />
            <!-- <Input
                id="_IDGenInput6"
                value="{formModel>/employee/subteam}"
                placeholder="Subteam"
            /> -->
            <Select
                id="subteamSelect"
                items="{
                  path: 'subteam>/subteams'
                }"
                width="100%"
                selectedKey="{formModel>/employee/subteam}"
            >
                <items>
                    <core:Item
                        id="_IDGenItem2"
                        key="{subteam>key}"
                        text="{subteam>text}"
                    />
                </items>
            </Select>
            <Select
                id="strategySelect"
                items="{
                  path: 'strategy>/strategies'
                }"
                width="100%"
                selectedKey="{formModel>/employee/strat_id}"
            >
                <items>
                    <core:Item
                        id="_IDGenItem3"
                        key="{strategy>strat_id}"
                        text="{strategy>strat_name}"
                    />
                </items>
            </Select>
        </VBox>
        <beginButton>
            <Button
                id="_IDGenButton7"
                text="Save"
                press="onSaveEmployee"
            />
        </beginButton>
        <endButton>
            <Button
                id="_IDGenButton8"
                text="Cancel"
                press="onCancelEmployee"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>

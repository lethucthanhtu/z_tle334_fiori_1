<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
>
  <Dialog
    id="roleDialog"
    title="Select Role"
    type="Message"
    draggable="true"
    resizable="true"
  >
    <VBox id="_IDGenVBox1" class="sapUiSmallMargin">
      <Label id="_IDGenLabel" text="Choose your role" />
      <Select
        id="roleSelect"
        width="100%"
      >
        <items>
          <core:Item id="_IDGenItem"
            key="Admin"
            text="Admin"
          />
          <core:Item id="_IDGenItem1"
            key="Employee"
            text="Employee"
          />
        </items>
      </Select>
    </VBox>
    <beginButton>
      <Button id="_IDGenButton"
        text="Confirm"
        press="onRoleConfirm"
      />
    </beginButton>
  </Dialog>
</core:FragmentDefinition>
